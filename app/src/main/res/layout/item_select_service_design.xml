<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F4F4F4"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#ffffff">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/chkBox"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_weight="0"

                    android:theme="@style/MyCheckBox" />

                <com.view.MTextView
                    android:id="@+id/serviceNameTxtView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:singleLine="true"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:textColor="#272727"
                    android:textSize="@dimen/txt_size_18"
                    android:textStyle="bold"
                    app:customTypeFace="@string/robotobold" />

                <com.view.MTextView
                    android:id="@+id/apptypeTxtView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:textColor="#838383"
                    android:textSize="@dimen/txt_size_12"
                    android:visibility="gone" />


                <ImageView
                    android:id="@+id/editBtn"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:src="@mipmap/ic_edit"
                    android:textColor="@color/white"
                    android:tint="@color/appThemeColor_1"
                    android:visibility="gone" />


            </LinearLayout>

            <com.view.MTextView
                android:id="@+id/serviceTypeNameTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:layout_marginTop="-8dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="2dp"
                android:textAlignment="viewStart"
                android:textColor="#838383"
                android:textSize="@dimen/txt_size_12" />

            <LinearLayout
                android:id="@+id/editarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:orientation="horizontal">

                <com.view.MTextView
                    android:id="@+id/serviceamtHtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:gravity="center_vertical|start"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:textColor="#605e5e"
                    android:textSize="@dimen/txt_size_14"
                    app:customTypeFace="@string/robotobold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/serviceamtVtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|start"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="@color/appThemeColor_1"
                        android:textSize="@dimen/txt_size_14"
                        app:customTypeFace="@string/robotobold" />

                    <com.view.MTextView
                        android:id="@+id/minHourTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="#727272"
                        android:textSize="@dimen/txt_size_14"
                        android:visibility="gone" />


                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="#efefef" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>